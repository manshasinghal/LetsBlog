<nav class="navbar navbar-expand-lg custom-navbar" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Let's Blog</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <% if (locals.user) { %>
        <li class="nav-item">
          <a class="nav-link" href="/blog/add-new">Add Blog</a>
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <%= locals.user.fullName %>
          </a>
          <ul class="dropdown-menu custom-dropdown-menu">
            <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
          </ul>
        </li>
        <% } else {%>
        <li class="nav-item">
          <a class="nav-link" href="/user/signup">Create Account</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/signin">Signin</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
<div class="container mt-4">
  <div class="alert alert-danger" role="alert"><%= locals.error %></div>
</div>
<% } %>

<style>
  .custom-navbar {
    background: linear-gradient(135deg, #4a90e2, #0033cc); /* Gradient background */
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3), 0 6px 12px rgba(0, 0, 0, 0.2);
    transition: background 0.4s ease, box-shadow 0.4s ease;
    border-radius: 0 0 20px 20px; /* Rounded bottom corners */
    position: relative;
    z-index: 1000;
    perspective: 1000px; /* Enable 3D effects */
  }

  .custom-navbar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.15);
    border-radius: 0 0 20px 20px;
    z-index: -1;
    transform: scaleY(0);
    transform-origin: top;
    transition: transform 0.4s ease;
  }

  .custom-navbar:hover::before {
    transform: scaleY(1);
  }

  .custom-navbar:hover {
    background: linear-gradient(135deg, #0033cc, #4a90e2); /* Gradient change on hover */
    box-shadow: 0 18px 30px rgba(0, 0, 0, 0.4), 0 8px 16px rgba(0, 0, 0, 0.3);
    transform: translateY(-4px); /* Lift effect */
  }

  .custom-navbar .navbar-brand {
    font-size: 1.8rem;
    font-weight: 700;
    color: #ffffff;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    transition: color 0.4s ease, text-shadow 0.4s ease;
  }

  .custom-navbar .navbar-brand:hover {
    color: #f39c12; /* Gold color on hover */
    text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.7); /* Enhanced shadow on hover */
  }

  .custom-navbar .nav-link {
    color: #ffffff;
    font-size: 1.2rem;
    padding: 14px 20px;
    transition: color 0.4s ease, background-color 0.4s ease, transform 0.4s ease;
    border-radius: 8px; /* Rounded corners for link */
  }

  .custom-navbar .nav-link:hover {
    color: #f39c12; /* Gold color on hover */
    background-color: rgba(255, 255, 255, 0.3); /* Light background on hover */
    transform: scale(1.05); /* Slight zoom effect */
  }

  .custom-dropdown-menu {
    border-radius: 0.5rem;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
    animation: fadeIn 0.3s ease;
  }

  .custom-dropdown-menu .dropdown-item {
    transition: background-color 0.4s ease, color 0.4s ease;
  }

  .custom-dropdown-menu .dropdown-item:hover {
    background-color: #0033cc; /* Darker background on hover */
    color: #f39c12; /* Gold color on hover */
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
